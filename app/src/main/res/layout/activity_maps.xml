<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:windowSoftInputMode="adjustNothing"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--MAP-->
    <RelativeLayout
        android:layout_marginBottom="60dp"
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!--COMPANY NAME / LOGO / SLOGAN-->
    <ImageView
        android:layout_margin="@dimen/margin_button"
        android:background="@android:color/black"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_slogan"
        android:scaleType="fitCenter" />

    <!--WINDOW LAYOUT FOR ADMIN AND FIND BUS-->
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_top"
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <!--BUS LIST LAYOUT-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/track_my_bus_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="280.0px"
                        android:layout_margin="@dimen/margin_top">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:alpha="0.8"
                                android:background="@drawable/bg_blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="3dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="5dp"
                                android:weightSum="1"
                                tools:background="@drawable/bg_main_top_bar">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.2"
                                    android:inputType="text"
                                    android:padding="@dimen/padding_inner_container"
                                    android:text="@string/track_select_bus"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />

                                <ListView
                                    android:id="@+id/selectBusID"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="0.7"
                                    android:background="#99ffffff"
                                    android:padding="@dimen/margin_button" />

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.1">

                                    <TextView
                                        android:id="@+id/txtSelectBusOutput"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:inputType="text"
                                        android:textColor="@android:color/white"
                                        android:textSize="10sp" />
                                </HorizontalScrollView>
                            </LinearLayout>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
                <!--ADMIN LAYOUT-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/admin_entrance"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="280.0px"
                        android:layout_margin="@dimen/margin_top">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:background="@drawable/bg_blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="@dimen/padding_inner_container"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/admin_text" />
                                <EditText
                                    android:textColor="@android:color/white"
                                    android:id="@+id/edtBusID"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text" />
                                <Button
                                    android:id="@+id/btnSubmit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/admin_submit"
                                    android:onClick="adminSubmit" />
                            </LinearLayout>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!--ACTIONS BOTTOM BAR-->
    <RelativeLayout
        android:background="@drawable/bg_main_top_bar"
        android:layout_gravity="bottom"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--BTN ANIMATE BUS STOP-->
            <LinearLayout
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/pickups"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:onClick="animatePickups"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bus_stop" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:text="@string/pickups"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_height="0dp" />
            </LinearLayout>

            <!--CONNECT TO SERVER-->
            <LinearLayout
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btn_connect"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:onClick="connect"
                    android:scaleType="fitCenter"
                    android:src="@drawable/connect_white" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:text="@string/connect"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_height="0dp" />
            </LinearLayout>

            <!--ADMIN ONLY-->
            <Button
                android:layout_marginLeft="10dp"
                android:visibility="visible"
                android:id="@+id/btn_admin_only"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="@dimen/margin_button"
                android:onClick="adminOnly"
                android:text="@string/admin_btn_title"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/button_font_size"
                android:textStyle="bold" />

            <!--FIND A BUS-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:focusable="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:onClick="trackBus"
                        android:background="@drawable/bus_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter" />
                </RelativeLayout>
                <RelativeLayout
                    android:focusable="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/find_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter" />
                </RelativeLayout>
                <RelativeLayout
                    android:focusable="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:textSize="14.0sp"
                        android:textStyle="bold"
                        android:textColor="#0079bd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/track_bus_btn_title"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:focusable="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:textSize="13.0sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/track_bus_btn_title"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--<SPLASH SCREEN></SPLASH>-->
    <RelativeLayout
        android:id="@+id/view_flipper_layout"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/bg_green"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider2"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider3"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider4"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider5"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider6"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider7"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/loading_slider8"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />
            </RelativeLayout>
        </ViewFlipper>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonContainer">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_bar_max_height"
                android:src="@drawable/logo_slogan"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/loading_font_size"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:id="@+id/loading_text"
            android:background="#dd000000"
            android:paddingTop="@dimen/margin_top"
            android:paddingBottom="@dimen/margin_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/demo"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</FrameLayout>